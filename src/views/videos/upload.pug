extends ../common/layouts/base

block content 
    div
        button#startBtn Start Recording
    if(errorMessage)
        span #{errorMessage}
    form(method='POST' action='/videos/upload' enctype='multipart/form-data')
        label(for="video") Video File
        input(type="file", name="video", accept="video/*", id="video", required)
        input(type="text" name="title" placeholder="Title" required maxlength="80")
        input(type="text" name="description" placeholder="Description" required minlength="20")
        input(type="text" name="hashtags" placeholder="Hashtags, Separated by Comma." required)
        input(type="submit" value="Upload Video")
block scripts
    script(src='/static/js/recorder.js')