mixin video(video)
    div
        h4
            a(href=`videos/${video.id}`)=video.title
        ul
            li Description : #{video.description}.
            li Posted : #{video.createAt}.
            li Hashtags : #{video.hashtags}.
            li #{video.meta.views} views.
            li #{video.meta.rating}/5.
            li ID : #{video.id}